#include <stdio.h>
#include <altera_avalon_pio_regs.h>
#include <system.h>
void delay_us(int n)
{
	int i;
	i = n;
	while(i)
	{
		i--;
	}
}
int main()
{
  printf("Hello from Nios II!\n");
  while(1)
  {
	  IOWR_ALTERA_AVALON_PIO_DATA(LED_BASE, 0);
	  delay_us(100000);delay_us(100000);delay_us(100000);
	  IOWR_ALTERA_AVALON_PIO_DATA(LED_BASE, 1);
	  delay_us(100000);delay_us(100000);delay_us(100000);
  }
  return 0;
}
